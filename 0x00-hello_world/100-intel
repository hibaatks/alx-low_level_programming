#!/bin/bash

# Check if the CFILE variable is set
if [ -z "$CFILE" ]; then
    echo "Error: CFILE variable is not set."
    exit 1
fi

# Extract the base name of the C file (excluding the .c extension)
BASENAME="${CFILE%.c}"

# Generate the assembly code and save it to a .s file
gcc -S -masm=intel "$CFILE" -o "$BASENAME.s"

echo "Assembly code saved to $BASENAME.s"

